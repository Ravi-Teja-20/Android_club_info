<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/lin_layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:layout_margin="5sp"
            android:src="@drawable/android_logo" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:orientation="vertical"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:layout_margin="5sp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:paddingLeft="5sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/andy_about"
            android:textSize="25sp"
            android:textColor="#000000"
            android:textAlignment="gravity"
            android:layout_margin="5sp"
            android:paddingLeft="5sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apps Developed"
            android:layout_margin="5sp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:paddingLeft="5sp"/>

        <ImageView
            android:id="@+id/andy_app_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/career_guide_app"
            android:onClick="career_guide"
            android:layout_margin="5sp"/>

        <ImageView
            android:id="@+id/andy_app_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/eventium_app"
            android:onClick="eventium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Events"
            android:layout_margin="5sp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:paddingLeft="5sp"/>

        <ImageView
            android:id="@+id/andy_eve_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/event_1_andy"
            android:layout_marginTop="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp" />

        <TextView
            android:id="@+id/andy_eve_1_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inauguration\nOur Humble Beginnings"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp" />

        <ImageView
            android:id="@+id/andy_eve_2"
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:src="@drawable/event_2_andy"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp" />

        <TextView
            android:id="@+id/andy_eve_2_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workshop on\nBasics of Android Development"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp" />

        <ImageView
            android:id="@+id/andy_eve_3"
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:src="@drawable/event_3_andy"
            android:layout_marginTop="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp" />

        <TextView
            android:id="@+id/andy_eve_3_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FDP on Android\n and Latest Technologies"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Achievements"
            android:layout_margin="5sp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:paddingLeft="5sp"/>

        <ImageView
            android:id="@+id/andy_achieve_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/achieve_1_andy"
            android:layout_marginTop="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp" />

        <TextView
            android:id="@+id/andy_achieve_1_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 Students selected as Finalists in NADC.\nAmong a huge lot of Students for NADC, 4 of our students where selected for the Grand Finale which was held in IIT Madras."
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:layout_marginBottom="18sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp" />

        <ImageView
            android:id="@+id/andy_achieve_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/achieve_2_andy"
            android:layout_marginTop="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"/>

        <TextView
            android:id="@+id/andy_achieve_2_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Certificate of merit by NADC.\nOur stundents receive the Zonal Merit certificate awarded by NADC."
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:layout_marginBottom="18sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team"
            android:layout_margin="5sp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:paddingLeft="5sp"/>

        <TextView
            android:id="@+id/andy_team_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mrs. M.Madhavi - Faculty Lead\n\nG.Alekhya - President\n\nNithya - Vice President\n\nV.Supriya - Technical Secretary\n\nNagesh - General Secretary\n\nAbhijeet - Marketing Coordinator\n\nRohit - Treasurer\n\nRavi Teja - Documentation\n\nNeha - Designer"
            android:textSize="20sp"
            android:layout_marginBottom="5sp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

    </LinearLayout>

    </LinearLayout>

</ScrollView>